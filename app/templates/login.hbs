<div class="container">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Login to account</h2>

              {{#if error.valid}}
                <div class="alert alert-danger" role="alert">
                {{error.message}}
                </div>
              {{/if}}
              <form>

                <div class="form-outline mb-4">
                  <label class="form-label" >
                    {{input type='email' value=email placeholder='enter your email' class='form-control form-control-lg'}}
                  </label>
                </div>

                <div class="form-outline mb-4">
                  <label class="form-label" >
                    {{input type='password' value=password placeholder='enter your password' class='form-control form-control-lg'}}
                  </label>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="button" disabled={{loading}}
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"  {{action 'login' on='click'}}>
                      {{#if loading}}
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                      {{/if}}
                    Login</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? 
                    {{#link-to 'register' }}<u>register</u>{{/link-to}}
                </p>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>